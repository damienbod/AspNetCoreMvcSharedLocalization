@using AspNetCoreMvcSharedLocalization.Resources

@inject LocService SharedLocalizer

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AspNetCoreMvcSharedLocalization</title>

    <link rel="stylesheet" href="~/css/vendor.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>
<body>
    <nav class="bg-dark mb-4 navbar navbar-dark navbar-expand-md">
            <div class="navbar-header">

                <a asp-controller="Home" asp-action="Index" class="navbar-brand">AspNetCoreMvcSharedLocalization</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("overview")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">@SharedLocalizer.GetLocalizedHtmlString("about")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">@SharedLocalizer.GetLocalizedHtmlString("contact")</a>
                    </li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
    </nav>

    <div class="container body-content">
        @RenderBody()

        <footer>
            <hr />
            <nav class="navbar transparent navbar-inverse">
                <p>&copy; 2018 - AspNetCoreMvcSharedLocalization</p>

                @await Html.PartialAsync("_SelectLanguagePartial")
            </nav>
        </footer>

    </div>
    <script src="~/js/vendor.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
